---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

const { content } = Astro.props;
---

<html lang={content.lang || 'en'}>
	<head>
		<MainHead title={content.title} description={content.description} />
		<style>
			.hero {
				padding: 8rem;
				display: flex;
				background-repeat: no-repeat;
				background-size: cover;
				min-height: 25vw;
				color: white;
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}

			.tag {
				margin-left: 0.5em;
				margin-right: 0.5em;
				text-transform: uppercase;
			}

			.tag:nth-of-type(1n) {
				color: var(--c-green);
			}
			.tag:nth-of-type(2n) {
				color: var(--c-orange);
			}
			.tag:nth-of-type(3n) {
				color: var(--c-blue);
			}
			.tag:nth-of-type(4n) {
				color: var(--c-pink);
			}

			.title {
				font-size: 3rem;
				font-weight: 900;
				letter-spacing: 0.0625em;
				text-align: center;
				padding-left: 1rem;
				padding-right: 1rem;
                margin-top: 3rem;
                margin-bottom: 1rem;
			}

            .date {
				font-size: 1.5rem;
				font-weight: 900;
				letter-spacing: 0.0625em;
				text-align: center;
                margin-bottom: 2rem;
			}

			.leadIn {
				padding-top: 4em;
				color: var(--t-bg);
				background-color: var(--t-fg);
				text-align: center;
			}

			.tagline {
				font-weight: 300;
				font-size: var(--f-u3);
				line-height: 1.5;
			}

			.content {
				font-size: var(--f-u1);
				line-height: 2.1;
				max-width: 60em;
				margin: auto;
			}

			.wrapper {
				padding-bottom: 4em;
				margin-bottom: 4em;
			}

			footer {
				text-align: center;
				margin-top: 3rem;
			}
		</style>
	</head>
	<body>
		<Nav />
		<header class="title">{content.title}</header>
		<div class="date">{content.postedOn}</div>
		<div class="wrapper">
			<div class="content"><slot /></div>
		</div>
		<footer>
		</footer>
		<Footer />
	</body>
</html>
